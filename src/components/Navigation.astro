---
const pages = ['about', 'experiences', 'training','partners', 'connect'];
const currentPath = Astro.url.pathname;
---

<nav class="font-sans bg-zinc-950/30 py-3 md:py-5 pl-2 md:pl-8">
  <div class="mx-auto px-2 md:px-4 flex flex-col md:flex-row items-start md:items-center justify-between">
    <div class="flex items-center gap-2 md:gap-3 flex-1 mb-2 md:mb-0">
      <h1 class="text-white text-2xl md:text-5xl font-garamond">McGill</h1>
      <h1 class="text-white text-base md:text-xl font-bold font-roboto pr-4 md:pr-12">FLYING CLUB</h1>
      <img src="/logo.png" alt="McGill Flying Club Logo" class="h-8 md:h-10" />
    </div>

    <div class="hidden md:flex items-center space-x-4 md:space-x-8 pr-2 md:pr-4">
      {currentPath !== '/' && (
        <a 
          href="/" 
          class="text-white font-medium hover:text-red-400 transition-colors duration-200"
        >
          home
        </a>
      )}
      {pages.map((page) => (
        <a 
          href={`/${page.toLowerCase()}`} 
          class="text-white font-medium hover:text-red-400 transition-colors duration-200"
        >
          {page}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Mobile menu -->
<div class="md:hidden bg-gray-900/100">
  <div class="px-4 py-2 space-y-2">
    {currentPath !== '/' && (
      <a 
        href="/" 
        class="block text-white font-medium hover:text-blue-500 transition-colors duration-200"
      >
        Home
      </a>
    )}
    {pages.map((page) => (
      <a 
        href={`/${page.toLowerCase()}`} 
        class="block text-white font-medium hover:text-blue-500 transition-colors duration-200"
      >
        {page}
      </a>
    ))}
  </div>
</div>
